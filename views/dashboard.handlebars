{{!-- user information will be here --}}
{{#each users as |user|}}
<div id="dashboardheader">

 <img id="profileimage" src={{display_image}}>

<h3>
   Hello {{user.name}}!
</h3>
   </div>
   {{/each}}
<button id="profilePicture">
Add a Profile Picture!
</button>
{{!-- previous workouts completed stats --}}

<form id="imageForm" action="/upload" method="POST" enctype="multipart/form-data" style="display: none;">
  <input type="file" id="myFile" name="profile" accept="image/*">
  <input type="submit" value="Upload">
</form>


{{#each activities as |activity|}}
 <div id={{id}} class="card dashboard-workouts">
    <p>Type: {{cap activity_type}}</p>
    <p class="workout-dates">Date Completed: {{format_date updatedAt}}</p>
    <p>Activity: {{activity_performed}}</p>
    <p>Activity Duration: {{activity_duration}}</p>
    <p>Number of sets: {{activity_sets}}</p>
    {{#if strength_weight}}
    <p>Total lbs lifted: {{strength_weight}}</p>
    {{/if}}
    <button class="btn dashboardincompletebtns" onClick="incompleteWorkout(this.parentNode.id)">Mark Incomplete</button>
 </div>
{{/each}}

<script src="/js/dashboard.js"></script>
