{{!-- user information will be here --}}
{{#each users as |user|}}
<div id="dashboardheader">
   <h3>
   Hello {{user.name}}!
</h3>
 <img id="profileimage" src={{display_image}}>
   {{/each}}
   </div>
{{!-- previous workouts completed stats --}}
<form id="imageForm" action="/upload" method="POST" enctype="multipart/form-data">
  <input type="file" id="myFile" name="filename" accept="image/*">
  <input type="submit" value="Upload">
</form>

<img src="{{users.display_image}}" alt="User's Profile Picture" class="profilePic">

{{#each activities as |activity|}}
 <div id={{id}} class="card">
    <p>Type: {{cap activity_type}}</p>
    <p>Activity: {{activity_performed}}</p>
    <p>Activity Duration: {{activity_duration}}</p>
    <p>Number of sets: {{activity_sets}}</p>
    {{#if strength_weight}}
    <p>Total lbs lifted: {{strength_weight}}</p>
    {{/if}}
    <button onClick="incompleteWorkout(this.parentNode.id)">Mark Workout Incomplete</button>
 </div>
{{/each}}

<script src="/js/dashboard.js"></script>
